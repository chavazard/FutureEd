function mostrar_grid_cursos_populares($pagina, $div_contenedor, $resumen)
{
    if ($resumen == true){
      $resultadosPorPagina = 9;
      $resultadosPorLinea = 3;
      $parametros = 'resumen: true';
    }else{
      $resultadosPorPagina = 12;
      $resultadosPorLinea = 4;
      $parametros = 'resumen: false';
    }
    
    if ($pagina == null)
        $pagina = 1;    
    
    $f_name = 'mostrar_grid_cursos_populares';    
    $tema_paginacion = 'paginacion';  
    
    $lim_ini = (($pagina - 1)* $resultadosPorPagina) + 1;
    $lim_fin = $pagina * $resultadosPorPagina;
    
    $items = consultar_cursos_populares_db($lim_ini, $lim_fin);
    
    $itemsCursos = $items[0]['items'];
    $totalResultados = $items[0]['totalResultados']; 

    mostrar_listado($resultadosPorLinea, $resultadosPorPagina, $itemsCursos, 'elemento-cursos-populares');//elementos por línea, elementos por página, array de items (debe incluir 'totalResultados'), path del tpl por elemento
    
    if ($resumen == 'false')
      mostrar_paginacion($resultadosPorPagina,$itemsCursos,$totalResultados,$f_name,$parametros,$div_contenedor,$tema_paginacion, $pagina);//elementos por página, array de items, total de resultados, nombre de la función que se cargará con ajax, parametros que se enviarán a la función,  div donde se cargará el ajax, theme de paginacion, pagina actual
}

