function mostrar_proyectos_curso($nid_curso, $pagina, $div_contenedor)
{
    $resultadosPorPagina = 9;
    $resultadosPorLinea = 3;

    if ($pagina == null)
        $pagina = 1;
    
    $f_name = 'mostrar_proyectos_curso';
    //$parametros = 'nid_curso: '.$nid_curso.', div_contenedor: \\\''.$div_contenedor.'\\\'';
    $parametros = 'nid_curso: '.$nid_curso;
    $tema_paginacion = 'paginacion';  
    
    $lim_ini = (($pagina - 1)* $resultadosPorPagina) + 1;
    $lim_fin = $pagina * $resultadosPorPagina;
    
    $items = consultar_proyectos_cursos_db($nid_curso, $lim_ini, $lim_fin);    
    $itemsProyectos = $items[0]['items'];
    $totalResultados = $items[0]['totalResultados']; 

    mostrar_listado($resultadosPorLinea, $resultadosPorPagina, $itemsProyectos, 'listado_proyectos_curso');//elementos por línea, elementos por página, array de items (debe incluir 'totalResultados'), path del tpl por elemento
    mostrar_paginacion($resultadosPorPagina,$itemsProyectos,$totalResultados,$f_name,$parametros,$div_contenedor,$tema_paginacion, $pagina);//elementos por página, array de items, total de resultados, nombre de la función que se cargará con ajax, parametros que se enviarán a la función,  div donde se cargará el ajax, theme de paginacion, pagina actual    
}

