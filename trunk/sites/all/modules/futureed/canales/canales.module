function show_ver_canal_informacion($nid_canal){
  $items = array();
  $items = consultar_canal_db($nid_canal);
  return theme('ver_canal_informacion', array('item' => $items));
}

function show_ver_canal_contenido($nid_canal){
  $items = array();
